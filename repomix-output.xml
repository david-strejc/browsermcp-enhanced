/**
 * Simple Timeout Test
 * Tests JavaScript execution timeout behavior with very short timeouts
 */

import { WebSocket } from 'ws';

const WS_PORT = 8765;

// Color output
const red = (text) => `\x1b[31m${text}\x1b[0m`;
const green = (text) => `\x1b[32m${text}\x1b[0m`;
const yellow = (text) => `\x1b[33m${text}\x1b[0m`;
const blue = (text) => `\x1b[34m${text}\x1b[0m`;

// Connect to WebSocket server
async function connectToServer() {
  return new Promise((resolve, reject) => {
    const ws = new WebSocket(`ws://localhost:${WS_PORT}`);
    
    const timeout = setTimeout(() => {
      reject(new Error('Connection timeout'));
    }, 5000);
    
    ws.on('open', () => {
      clearTimeout(timeout);
      console.log(green('‚úì Connected to WebSocket server'));
      resolve(ws);
    });
    
    ws.on('error', (err) => {
      clearTimeout(timeout);
      reject(new Error(`WebSocket connection failed: ${err.message}`));
    });
  });
}

// Send message and wait for response
async function sendMessage(ws, type, payload, expectedTimeout = false) {
  return new Promise((resolve, reject) => {
    const id = Math.random().toString(36).substr(2, 9);
    const message = JSON.stringify({ id, type, payload });
    
    console.log(blue(`‚Üí Sending ${type} with timeout=${payload.timeout}ms`));
    const startTime = Date.now();
    
    // Set our own timeout that's slightly longer than expected
    const timeout = setTimeout(() => {
      const duration = Date.now() - startTime;
      if (expectedTimeout) {
        console.log(green(`‚úì Correctly timed out after ${duration}ms`));
        resolve({ timedOut: true, duration });
      } else {
        console.log(red(`‚úó Unexpected timeout after ${duration}ms`));
        reject(new Error(`Message timeout after ${duration}ms`));
      }
    }, (payload.timeout || 5000) + 2000);
    
    const handler = (data) => {
      try {
        const response = JSON.parse(data.toString());
        if (response.id === id) {
          const duration = Date.now() - startTime;
          clearTimeout(timeout);
          ws.removeListener('message', handler);
          
          console.log(yellow(`‚Üê Response received after ${duration}ms`));
          
          if (response.error) {
            if (expectedTimeout && response.error.includes('timeout')) {
              console.log(green(`‚úì Got expected timeout error: ${response.error}`));
              resolve({ error: response.error, duration });
            } else {
              console.log(red(`‚úó Error: ${response.error}`));
              reject(new Error(response.error));
            }
          } else {
            if (expectedTimeout) {
              console.log(red(`‚úó Expected timeout but got success`));
              reject(new Error('Expected timeout but succeeded'));
            } else {
              console.log(green(`‚úì Success: ${JSON.stringify(response.payload?.result)}`));
              resolve({ payload: response.payload, duration });
            }
          }
        }
      } catch (e) {
        console.error(red(`Parse error: ${e.message}`));
      }
    };
    
    ws.on('message', handler);
    ws.send(message);
  });
}

async function runTests() {
