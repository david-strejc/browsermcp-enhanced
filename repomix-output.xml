            console.log('Element changed:', e.target.id, 'Value:', e.target.value);
        });

        document.addEventListener('click', function(e) {
            console.log('Element clicked:', e.target.tagName, 'ID:', e.target.id, 'Class:', e.target.className);
        });
    </script>
